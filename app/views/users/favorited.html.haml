.user_show.row-fluid
  .offset1.span10
    = render 'user_details', :user => @user
    %ul.nav.nav-tabs
      %li
        = link_to 'Published', published_user_path(@user)
      %li.active
        = link_to 'Favorited', favorited_user_path(@user)
    - if @user == current_user
      = render 'articles/list_articles_short', :articles => @favorites